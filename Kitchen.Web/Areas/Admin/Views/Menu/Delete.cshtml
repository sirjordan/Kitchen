@model Kitchen.Web.Data.Dish

@{
    ViewData["Title"] = "Изтриване на запис от основното меню";
    await Html.RenderPartialAsync("_AdminMenuPartial");
}

<h4>Сигурни ли сте, че искате да изтриете "@Model.Name"?</h4>
<div>
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Price)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Price)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Allergens)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Allergens)
        </dd>
    </dl>
    
    <form method="post"  action="/admin/menu/delete?id=@Model.Id">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Изтрий" class="btn btn-danger" /> |
        <a href="/admin/menu">Обратно в списъка</a>
    </form>
</div>
